    height: 10px;
  }

  .red_info {
    background: url("/images/red_icon.png");
    background-position: center;
    background-repeat: no-repeat;
  }

  .green_info {
    background: url("/images/green_icon.png");
    background-position: center;
    background-repeat: no-repeat;
  }

</style>